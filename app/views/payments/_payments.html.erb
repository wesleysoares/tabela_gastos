<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr class="active">
        <th>Data</th>
        <th>Descrição</th>
        <th>Valor</th>
      </tr>
    </thead>
    <tbody>
      <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.date.strftime('%d/%m/%Y') %></td>
        <td><%= payment.description %></td>
        <td><%= valor_formatado payment.value %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
