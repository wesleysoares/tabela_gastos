<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr class="active">
        <th>Data</th>
        <th>Descrição</th>
        <th>Valor</th>
        <th>Pago</th>
        <th>Ações</th>
        <th>&nbsp</th>
      </tr>
    </thead>
    <tbody>
      <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.date.strftime('%d/%m/%Y') %></td>
        <td><%= payment.description %></td>
        <td><%= valor_formatado payment.value %></td>
        <% if payment.paid %>
          <td><span class="glyphicon glyphicon-check" aria-hidden="true"></span></td>
          <% else %>
          <td>&nbsp</td>
        <% end %>
        <td><%= link_to '', edit_payment_path(payment),
                              class: 'btn btn-default glyphicon glyphicon-edit',
                              title: 'Editar pagamento',
                              'data-toggle' => 'tooltip',
                              'data-placement' => 'right' %>
        <%= link_to '', payment_delete_path(payment), remote:true,
                              class: 'btn btn-danger glyphicon glyphicon-trash',
                              title: 'Excluir pagamento',
                              'data-toggle' => 'tooltip',
                              'data-placement' => 'right'%>
      </td>
        <td>&nbsp</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
