<div class="panel panel-default">
  <div class="panel-body">
    <%= link_to 'Adicionar novo pagamento', new_payment_path, method: :get,
                                                      class:'btn btn-primary' %>
  </div>
</div>
<div class="row">
  <div class="col-md-10">
    <div class="panel panel-default">
      <section id='payments'>
        <%= render 'payments' %>
      </section>
    </div>
  </div>
  <div class="col-md-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong>Totais</strong>
      </div>
      <div class="panel-body">
        <section id='total_payments'>
          <%= render 'total_payment' %>
        </section>
      </div>
    </div>
  </div>
</div>
<div id="payment-modal" class="modal fade"></div>
