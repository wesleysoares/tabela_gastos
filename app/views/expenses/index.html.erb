<div class='row'>
  <div class="table-responsive">
    <table class="table">
      <thead>
       <tr class="active">
         <th>#</th>
         <th>Data</th>
         <th>Descrição</th>
         <th>Valor a pagar</th>
         <th>Valor Total</th>
         <th>Pago</th>
       </tr>
     </thead>
     <section id='expenses'>
       <tbody>
         <% @expenses.each do |expense| %>
          <tr>
            <td><%= expense.id %></td>
            <td><%= expense.date.strftime('%d/%m/%Y') %></td>
            <td><%= expense.description %></td>
            <td><%= valor_formatado expense.total_divided %></td>
            <td><%= valor_formatado expense.price %></td>
            <% if expense.paid? %>
              <td id='pay'><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span></td>
            <% else %>
              <td>&nbsp</td>
            <% end %>
          </tr>
        <% end %>
       </tbody>
       <tfoot>
         <% @expenses.find do |total| %>
           <tr>
             <td><strong>Totais</strong></td>
             <td>&nbsp</td>
             <td>&nbsp</td>
             <td><strong><%= valor_formatado total.total_pay_divided %></strong></td>
             <td><strong><%= valor_formatado total.total_pay %></strong></td>
             <td>&nbsp</td>
           </tr>
         <% end %>
       </tfoot>
     </section>
    </table>
  </div>
</div>
