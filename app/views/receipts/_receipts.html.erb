<div class=" table-responsive">
  <table class="table table-hover">
    <thead>
      <tr class="active">
        <th>Data</th>
        <th>Descrição</th>
        <th>Valor</th>
        <th>Pago</th>
        <th>&nbsp</th>
        <th>&nbsp</th>
      </tr>
    </thead>
    <tbody>
      <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.date.strftime('%d/%m/%Y') %></td>
        <td><%= receipt.description %></td>
        <td><%= valor_formatado receipt.value %></td>
        <% if receipt.paid? %>
          <td id=paid ><span class="glyphicon glyphicon-check" aria-hidden="true"></span></td>
        <% else %>
          <td>&nbsp</td>
        <% end %>
        <td><%= link_to '', edit_receipt_path(receipt),
                              class: 'btn btn-default glyphicon glyphicon-edit',
                              title: 'Editar recebimento',
                              'data-toggle' => 'tooltip',
                              'data-placement' => 'right' %>
        <%= link_to '', receipt_delete_path(receipt), remote: true,
                              class: 'btn btn-danger glyphicon glyphicon-trash',
                              title: 'Excluir recebimento',
                              'data-toggle' => 'tooltip',
                              'data-placement' => 'right'%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
